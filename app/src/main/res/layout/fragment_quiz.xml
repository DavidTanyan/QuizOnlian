<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFragment">

    <TextView
        android:id="@+id/textQuizTitle"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:gravity="center"
        android:text="დედაქალაქები"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btStartQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="300dp"
        android:text="@string/start_quiz"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/quiztimertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="100dp"
        android:text="00:00"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/quizqula"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="0"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/fotoquiz"
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/quiz"
android:visibility="gone"
        />

    <TextView
        android:id="@+id/textContQv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="რომელია რაღაცა ქვეყნის დედაქალაქი?"
        android:textSize="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="460dp"
        android:textColor="@color/black"

        />

    <Button
        android:id="@+id/btA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="A"

        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        />
    <Button
        android:id="@+id/btB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginStart="220dp"
        android:layout_marginTop="500dp"
        />
    <Button
        android:id="@+id/btC"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_marginStart="20dp"
        android:layout_marginTop="570dp"
        />
    <Button
        android:id="@+id/btD"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="D"
        android:layout_marginStart="220dp"
        android:layout_marginTop="570dp"
        />

</FrameLayout>

